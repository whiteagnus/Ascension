IF
  GlobalTimerExpired("IllaseraSpawnTimer","GLOBAL")
  Global("IllaseraSpawn","GLOBAL",0)
  OR(2)
  NumInParty(1)
  LevelPartyLT(10)
THEN
  RESPONSE #100
