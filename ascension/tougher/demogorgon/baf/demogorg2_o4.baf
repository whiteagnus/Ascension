IF
  Global("StoppedTime","LOCALS",2)
  !GlobalTimerNotExpired("finger","LOCALS")
  RandomNum(3,1)
  See(Nearestenemyof(Myself))
THEN
  RESPONSE #100
    SetGlobalTimer("finger","LOCALS",15)
    IncrementGlobal("demospell","LOCALS",1)
