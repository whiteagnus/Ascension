IF
  InParty(Myself)
  RealGlobalTimerExpired("SarevokTalkPC1","GLOBAL")
  !StateCheck(Player1,STATE_SLEEPING)
  Global("ExpBSarevok10","GLOBAL",0)
  Global("ForceTalk1","LOCALS",1)
  See(Player1)
  !See([ENEMY])
  !Range([NEUTRAL],10)
THEN
  RESPONSE #100
    SetGlobal("ForceTalk1","LOCALS",2)
