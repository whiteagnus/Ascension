IF
  Global("IllaseraDead","AR6200",1)
  Global("IllaseraImprisoned","AR6200",0)
  HasItem("finilla",Myself)
THEN
  RESPONSE #100
    SetInterrupt(FALSE)
    DestroyItem("finilla")
    SetInterrupt(TRUE)
    Continue()
END

